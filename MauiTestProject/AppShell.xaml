<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTestProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTestProject"
    xmlns:views="clr-namespace:MauiTestProject.MVVM.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Custom Button Effects"
        ContentTemplate="{DataTemplate views:CustomButtonsPage}"
        Route="CustomButtonsPage"/>

    <ShellContent
        Title="Custom Vertical Stack Layout"
        ContentTemplate="{DataTemplate views:CustomVerticalStackLayoutPage}"
        Route="CustomVerticalStackLayoutPage"/>

</Shell>
